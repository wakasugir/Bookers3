<div class="container">
    <% if flash[:notice] %>
        <p id="notice"><%= flash[:notice] %></p>
    <% end %>
    <div class="row">
        <div class="col-xs-3">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image", size: "100x100" %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <% if current_user == @user %>
              <%= link_to "", edit_user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_26158" %>
            <% else %>
              <%= link_to "", user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_26158" %>
            <% end %>
          </div>
          <h2>New book</h2>
          <%= form_with model:@new_book, local:true do |f| %>
            <div class="field row">
              <%= f.label :title %>
              <%= f.text_field :title, class:"col-xs-12" %>
            </div>
            <div class="field row">
              <%= f.label :opinion %>
              <%= f.text_area :body, class:"col-xs-12" %>
            </div>
            <div class="actions row">
              <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
            </div>
          <% end %>
        </div>
        
        <div class="col-xs-9">
            <h2>Books</h2>
            <table class="table">
              <thead>
                <th></th>
                <th>title</th>
                <th>opnion</th>
                <th colspan="3"></th>
              </thead>
              <tbody>
                <% if !@books.nil? %>
                  <% @books.each do |book| %>
                    <tr>
                      <td>
                        <%= link_to user_path(book.user) do %>
                          <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image", size: "50x50" %>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to book.title, book_path(book) %>
                      </td>
                      <td>
                        <%= book.body %>
                      </td>
                      <td id="count_<%= book.id %>">
                        <%= render partial: 'book_comments/count', locals: {book: book} %> 
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
        </div>
      
    </div>
</div>
 
<div class="container">
    <div class="row">
        <div class="col-xs-3">
          <h2>User info</h2>
          <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image", size: "100x100" %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= current_user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to "", edit_user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_26158" %>
          </div>
          <%= render 'books/book', new_book: @new_book %>
        </div>
        <div class="col-xs-9">
          <h2>Users</h2>
          <table class="table">
            <thead>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </thead>
            <tbody>
              <% if !@users.nil? %>
                <% @users.each do |user| %>
                  <tr>
                    <td>
                      <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image", size: "50x50" %>
                    </td>
                    <td>
                      <%= user.name %>
                    </td>
                    <td>
                      <%= link_to "Show", user_path(user) %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
  
        </div>
    </div>
</div>
 